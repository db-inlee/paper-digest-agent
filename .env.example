# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LANGSMITH_API_KEY=your-langsmith-api-key

# LangSmith Configuration
LANGSMITH_PROJECT=paper-digest-agent
LANGSMITH_TRACING=true

# LLM Configuration
LLM_PROVIDER=openai  # or claude
LLM_MODEL_CLAUDE=claude-sonnet-4-20250514
LLM_MODEL_OPENAI=gpt-4o

# GROBID Configuration
GROBID_URL=http://localhost:8070

# Paper Source Configuration
PAPER_SOURCE=hf_papers  # hf_papers (default) or arxiv

# Hugging Face Papers Configuration (when PAPER_SOURCE=hf_papers)
HF_PAPERS_MIN_VOTES=5
HF_PAPERS_LOOKBACK_DAYS=1

# arXiv Configuration (when PAPER_SOURCE=arxiv)
# ARXIV_CATEGORIES=cs.LG,cs.CL,cs.AI,cs.CV
# ARXIV_KEYWORDS=LLM,agent,RAG,tool use,reasoning,planning
# ARXIV_MAX_RESULTS=100
